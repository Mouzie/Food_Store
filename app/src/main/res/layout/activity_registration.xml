<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bean.java.food_store.RegistrationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:background="#fdfdfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/register"
            android:gravity="center"
            android:textSize="30dp"
            android:id="@+id/toolbarText"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.Toolbar>



    <EditText
        android:gravity="center"
        android:layout_width="250dp"
        android:id="@+id/txtName"
        android:hint="@string/name"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolBar"
        android:layout_alignLeft="@+id/txtSurname"
        android:layout_alignStart="@+id/txtSurname" />

    <EditText
        android:gravity="center"
        android:hint="@string/surname"
        android:id="@+id/txtSurname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_marginTop="17dp" />

    <EditText
        android:gravity="center"
        android:id="@+id/txtEmail"
        android:hint="@string/username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/txtUsername"
        android:layout_alignLeft="@+id/txtUsername"
        android:layout_alignStart="@+id/txtUsername" />


    <EditText
        android:gravity="center"
        android:id="@+id/txtUsername"
        android:hint="@string/email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtPassword"
        android:layout_alignLeft="@+id/txtPassword"
        android:layout_alignStart="@+id/txtPassword"
        android:layout_marginBottom="22dp" />


    <EditText
        android:gravity="center"
        android:id="@+id/txtPassword"
        android:hint="@string/password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginBottom="30dp" />

    <EditText
        android:gravity="center"
        android:hint="@string/cPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_above="@+id/btnRegistration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp" />

    <Button
        android:gravity="center"
        android:id="@+id/btnRegistration"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_marginBottom="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
